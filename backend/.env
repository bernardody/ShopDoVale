# IMPORTANTE: Este é um exemplo para desenvolvimento local
# Copie este arquivo e ajuste com suas credenciais reais

# Configurações da Aplicação
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Base URL da aplicação
BASE_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3001

# Configurações do Banco de Dados (Supabase)
# SUBSTITUA pelos seus dados do Supabase
DATABASE_URL=postgresql://postgres:SUA_SENHA@db.SEU_PROJECT_ID.supabase.co:5432/postgres
DB_HOST=db.SEU_PROJECT_ID.supabase.co
DB_PORT=5432
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=SUA_SENHA_SUPABASE
DB_SSL=true

# URLs do Supabase
# SUBSTITUA pelos seus dados do projeto Supabase
SUPABASE_URL=https://SEU_PROJECT_ID.supabase.co
SUPABASE_ANON_KEY=SUA_ANON_KEY
SUPABASE_SERVICE_KEY=SUA_SERVICE_ROLE_KEY

# Configurações JWT
JWT_SECRET=sua_chave_jwt_super_secreta_aqui_123456789
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=sua_chave_refresh_token_secreta
JWT_REFRESH_EXPIRES_IN=30d

# Configurações de Upload
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/webp
UPLOAD_PATH=./uploads

# Configurações de Email (Gmail - opcional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=seu_email@gmail.com
EMAIL_PASS=sua_senha_de_app_gmail
EMAIL_FROM=ShopDoVale <noreply@shopdovale.com>

# Configurações de CORS
CORS_ORIGIN=http://localhost:3001
CORS_CREDENTIALS=true

# Configurações de Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Configurações de Segurança
BCRYPT_ROUNDS=12
SESSION_SECRET=sua_session_secret_key

# Configurações de Log
LOG_LEVEL=debug
LOG_FILE=./logs/app.log

# Desenvolvimento
DEBUG=shopdovale:*