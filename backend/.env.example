# Configuração do Servidor
NODE_ENV=development
PORT=3000

# Configuração do Banco de dados PostgreSQL/Supabase
DB_HOST=localhost
DB_PORT=5432
DB_NAME=shopdovale
DB_USER=postgres
DB_PASSWORD=sua_senha_aqui

# Para Supabase, use a URL de conexão direta:
# DB_HOST=db.xxx.supabase.co
# DB_USER=postgres
# DB_PASSWORD=sua_senha_supabase

# Configuração JWT
JWT_SECRET=seu_jwt_secret_super_seguro_aqui
JWT_EXPIRES_IN=7d
JWT_ISSUER=ShopDoVale
JWT_AUDIENCE=shopdovale-users

# Configuração Refresh Token
REFRESH_TOKEN_SECRET=seu_refresh_token_secret_aqui
REFRESH_TOKEN_EXPIRES_IN=30d

# Configuração Bcrypt
BCRYPT_SALT_ROUNDS=12

# Configuração de Email (para implementação futura)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=seu_email@gmail.com
EMAIL_PASS=sua_senha_email
EMAIL_FROM=noreply@shopdovale.com

# Configuração de Upload
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp

# Configuração de CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Configuração de Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configuração de Logs
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Configuração de Webhook (para integrações futuras)
WEBHOOK_SECRET=seu_webhook_secret

# Configuração de Cache Redis (opcional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Configuração de Notificações
WHATSAPP_API_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=

# Configuração de Storage (para imagens)
STORAGE_TYPE=local
# Para usar S3/DigitalOcean Spaces:
# STORAGE_TYPE=s3
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=
# AWS_BUCKET_NAME=