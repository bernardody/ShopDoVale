# Configurações da Aplicação
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Base URL da aplicação
BASE_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3001

# Configurações do Banco de Dados (Supabase)
DATABASE_URL=postgresql://postgres:[password]@db.[project-id].supabase.co:5432/postgres
DB_HOST=db.[project-id].supabase.co
DB_PORT=5432
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=your_supabase_password
DB_SSL=true

# URLs do Supabase
SUPABASE_URL=https://[project-id].supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_role_key

# Configurações JWT
JWT_SECRET=your_super_secret_jwt_key_here_make_it_very_long_and_random
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_refresh_token_secret_key
JWT_REFRESH_EXPIRES_IN=30d

# Configurações de Upload
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/webp
UPLOAD_PATH=./uploads

# Configurações de Email (opcional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_FROM=ShopDoVale <noreply@shopdovale.com>

# Configurações de CORS
CORS_ORIGIN=http://localhost:3001
CORS_CREDENTIALS=true

# Configurações de Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Configurações de Segurança
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_key

# Configurações de Log
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Configurações de Webhook (opcional)
WEBHOOK_SECRET=your_webhook_secret

# Configurações de Cache (Redis - opcional)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Configurações de Monitoramento (opcional)
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=

# Configurações de CDN/Storage (opcional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# Configurações de Pagamento (opcional)
MERCADOPAGO_ACCESS_TOKEN=
MERCADOPAGO_PUBLIC_KEY=
MERCADOPAGO_WEBHOOK_SECRET=

# Configurações de SMS (opcional)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Desenvolvimento
DEBUG=shopdovale:*